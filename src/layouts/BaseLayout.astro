---
const {
  title = "Berrystock Solutions",
  description = "Secure, scalable cloud platforms and business systems integration.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <nav>
      <div class="container inner">
        <a class="brand" href="/">
          <img src="/assets/brand-mark.jpg" alt="Berrystock Solutions" />
          <span>Berrystock Solutions</span>
        </a>

        <div class="navlinks">
          <a href="/services">Services</a>
          <a href="/work">Work</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-text">
            © {new Date().getFullYear()} Berrystock Solutions · 
            <a href="mailto:enquiries@berrystocksolutions.co.uk">enquiries@berrystocksolutions.co.uk</a>
          </div>
          <div class="footer-links">
            <a href="https://www.linkedin.com/in/berkeleyo/" target="_blank" rel="noopener" class="linkedin-btn">
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
